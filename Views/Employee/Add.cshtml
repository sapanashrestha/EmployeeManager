@using EmployeeManager.ViewModels
@model CreateEmployeeViewModel 
@* <h2>@ViewBag.FormTitle</h2> *@
<h2>
	Add Employee
</h2>
<form method="post">
	<input type="hidden" asp-for="Id" />
	<div>
		<label class="form-label">Name</label>
		<input type="text" asp-for="Name" class="form-control">
		<span asp-validation-for="Name" class=" alert-danger"></span>
	</div>
	<div>
		<label class="form-label">ContactNumber</label>
		<input type="long" asp-for="ContactNumber" class="form-control">
	</div>
	<div>
		<label class="form-label">Email</label>
		<input type="email" asp-for="Email" class="form-control">
	</div>
	<div>
		<label class="form-label">State</label>
		<input type="text" asp-for="State" class="form-control">
	</div><div>
		<label class="form-label">Department</label>
		<input type="text" asp-for="Department" class="form-control">
	</div><div>
		<label class="form-label">Salary</label>
		<input type="double" asp-for="Salary" class="form-control">
	</div>
	<div class="col-12">
		<button type="submit" class="btn btn-success mt-2">Save</button>
		<a asp-action="Index" class="btn btn-warning mt-2">Back</a>
	</div>
</form>


@section Scripts {
}